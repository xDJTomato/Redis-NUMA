# YCSB NUMA 热点工作负载
# 模拟 NUMA 场景下的热点访问模式
# 80% 的操作集中在 20% 的 key 上

# 基础配置
recordcount=100000
operationcount=1000000
workload=site.ycsb.workloads.CoreWorkload

# 读写比例
readproportion=0.8
updateproportion=0.2
scanproportion=0
insertproportion=0

# 热点配置 - 80/20 法则
requestdistribution=hotspot
hotspotdatafraction=0.2
hotspotopnfraction=0.8

# 数据大小
fieldcount=10
fieldlength=100

# 线程配置
threadcount=50

# Redis 特定配置
redis.host=127.0.0.1
redis.port=6379
redis.timeout=2000
redis.database=0
